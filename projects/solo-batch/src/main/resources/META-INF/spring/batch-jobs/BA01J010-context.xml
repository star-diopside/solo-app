<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <import resource="classpath:/META-INF/spring/batch/simple-step-context.xml" />

    <job id="BA01J010" incrementer="jobParametersIncrementer" xmlns="http://www.springframework.org/schema/batch">
        <step id="BA01J010S010" parent="simpleStep">
            <tasklet transaction-manager="transactionManager">
                <chunk reader="BA01J010S010.reader" processor="BA01J010S010.processor" writer="BA01J010S010.writer" />
            </tasklet>
        </step>
    </job>

    <bean id="BA01J010S010.reader" class="org.springframework.batch.item.database.JpaPagingItemReader" scope="step">
        <property name="entityManagerFactory" ref="entityManagerFactory" />
        <property name="queryString" value="select u from User u" />
    </bean>

    <bean id="BA01J010S010.processor" class="jp.gr.java_conf.star_diopside.solo.batch.logic.BA01J010S010Processor" />

    <bean id="BA01J010S010.writer" class="jp.gr.java_conf.star_diopside.solo.batch.logic.BA01J010S010Writer" />

</beans>
